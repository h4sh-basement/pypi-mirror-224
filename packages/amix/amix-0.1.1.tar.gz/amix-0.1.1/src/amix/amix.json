{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/amix",
  "definitions": {
    "amix": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "original_tempo": {
          "type": "number"
        },
        "bars": {
          "type": "integer"
        },
        "pitch": {
          "type": "number"
        },
        "tempo": {
          "type": "number"
        },
        "clips": {
          "$ref": "#/definitions/clips"
        },
        "filters": {
          "$ref": "#/definitions/filters"
        },
        "parts": {
          "$ref": "#/definitions/parts"
        },
        "mixes": {
          "$ref": "#/definitions/mixes"
        }
      },
      "required": ["mixes", "name", "original_tempo", "parts"],
      "title": "Amix"
    },
    "clips": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "title": "Clips"
    },
    "filters": {
      "type": "array",
      "items": { "$ref": "#/definitions/filter" },
      "uniqueItems": true,
      "title": "Filters"
    },
    "filter": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        },
        "curve": {
          "enum": [
            "tri",
            "qsin",
            "hsin",
            "esin",
            "log",
            "ipar",
            "qua",
            "cub",
            "squ",
            "cbr",
            "par",
            "exp",
            "iqsin",
            "ihsin",
            "dese",
            "desi",
            "losi",
            "sinc",
            "isinc",
            "nofade"
          ]
        }
      },
      "required": ["name"],
      "title": "Filter"
    },
    "mixes": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/mix" },
      "title": "Mix"
    },
    "mix": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pitch": {
          "type": "number"
        },
        "segments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/segment"
          },
          "uniqueItems": true,
          "title": "Segments"
        }
      },
      "required": ["segments"],
      "title": "Mix"
    },
    "segment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "parts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parts-element"
          },
          "uniqueItems": true,
          "title": "Parts"
        }
      },
      "required": ["name", "parts"],
      "title": "Segment"
    },
    "parts-element": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"],
      "title": "Parts Element"
    },
    "parts": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/part"
      },
      "title": "Parts"
    },
    "part": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bars": {
          "type": "integer"
        },
        "clips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/clips-element"
          }
        }
      },
      "required": ["clips"],
      "title": "Part"
    },
    "clips-element": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "bars": {
          "type": "integer"
        },
        "loop": {
          "type": "integer"
        },
        "offset": {
          "type": "integer"
        },
        "pitch": {
          "type": "integer"
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/filter"
          }
        }
      },
      "required": ["name"],
      "title": "Clips Element"
    }
  }
}
