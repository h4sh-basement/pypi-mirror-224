# Justfile

# load environment variables
set dotenv-load

# aliases

# list justfile recipes
default:
    just --list

# setup
setup:
    @pip install -r requirements.txt

# build
build:
    @python -m build

# install
install:
    @pip install -e .

# publish-test
publish-test:
    @twine upload --repository testpypi dist/* -u __token__ -p ${PYPI_TEST_KEY}

# streamlit stuff
app:
    @streamlit run app.py

# clean
clean:
    @rm -rf dist || True

